<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="1">

    <TableRow>
        <TextView
            android:layout_column="1"
            android:text="Open..."
            android:padding="3dip"
            android:background="#a9c3e1"/>
        <TextView
            android:text="Ctrl-O"
            android:gravity="right"
            android:padding="3dip"
            android:background="#a9c3e1"/>
    </TableRow>

    <TableRow>
        <TextView
            android:layout_column="1"
            android:text="Save..."
            android:padding="3dip"
            android:background="#a9c3e1"/>
        <TextView
            android:text="Ctrl-S"
            android:gravity="right"
            android:padding="3dip"
            android:background="#a9c3e1"/>
    </TableRow>

    <TableRow>
        <TextView
            android:layout_column="1"
            android:text="Save As..."
            android:padding="3dip"
            android:background="#a9c3e1"/>
        <TextView
            android:text="Ctrl-Shift-S"
            android:gravity="right"
            android:padding="3dip"
            android:background="#a9c3e1"/>
    </TableRow>

    <View
        android:layout_height="2dip"
        android:background="#FFEF78" />

    <TableRow>
        <TextView
            android:text="X"
            android:padding="3dip"
            />
        <TextView
            android:text="Import..."
            android:padding="3dip"
            android:background="#FFEF78" />
        <TextView
            android:padding="3dip"
            android:background="#FFEF78" />
    </TableRow>

    <TableRow>
        <TextView
            android:text="X"
            android:padding="3dip" />
        <TextView
            android:text="Export..."
            android:padding="3dip"
            android:background="#FFEF78" />
        <TextView
            android:text="Ctrl-E"
            android:gravity="right"
            android:padding="3dip"
            android:background="#FFEF78" />
    </TableRow>

    <View
        android:layout_height="2dip"
        android:background="#FF909090" />

    <TableRow>
        <TextView
            android:layout_column="1"
            android:text="Quit"
            android:padding="3dip"
            android:background="#E05D5D"/>
        <TextView
            android:padding="3dip"
            android:background="#E05D5D"/>
    </TableRow>
</TableLayout>